@using System
@using Linux.MVC.Learn.DDL.ViewModel
@model TagCloudViewModel
@{
    ViewBag.Title = "GetList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> <a href="~/Blog/Index">控制面板</a> </li>
        <li class="active"><i class="fa fa-list"></i> 标签列表</li>
    </ol>
</div>
<div class="row">
    <table class="table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>标签名称</th>
                <th>标签别名</th>
                <th>文章数量</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model.Tags)
            {
                <tr>
                    <td>
                        @tag.Name
                    </td>
                    <td>@tag.Slug</td>
                    <td>
                        @tag.PostCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>