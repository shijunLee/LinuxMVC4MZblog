@using Linux.MVC.Learn.Model.Admin
@model SysUser
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "登录";
}
<div class="well col-md-6 col-md-offset-3">
    @using (Html.BeginForm("Login", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
    {

        @Html.AntiForgeryToken();
        <h2>登录</h2>
        if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage.Length > 0)
        {
            <div class="alert alert-warning">
                <ul>
                    @foreach (var err in ViewBag.ErrorMessage)
                    {
                        <li>@err</li>
                    }
                </ul>
            </div>
        }
        <div class="form-group">
            @Html.TextBoxFor(M => M.UserLoginName, new { @class = "form-control placeholder-no-fix", @autocomplete = "off", @placeholder = "用户名", @name = "username" })


            @*<input type="email" class="form-control" name="Email" placeholder="Email">*@
        </div>
        <div class="form-group">
            @Html.PasswordFor(M => M.Password, new { @class = "form-control placeholder-no-fix", @autocomplete = "off", @placeholder = "密码", @name = "password" })


            @*<input type="password" class="form-control" name="Password" placeholder="密码">*@
        </div>

        <button type="submit" class="btn btn-primary">登录</button>
    }
</div>


